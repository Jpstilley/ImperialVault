@model IEnumerable<Game>

<h2>Campaigns</h2>

<table class="table">
    <tr>
        <th>Campaign Name</th>
    </tr>


    @foreach (var game in Model)
     {
        <tr>
            <td><a href=/Game/ViewGame/@game.CampaignID>@game.CampaignName</a></td>
        </tr>
     }
    </table>

<div style="display: block; text-align: center">
    <button style="background-color: rgba(191, 191, 191, 0.1)"><a href="/Game/CreateGame/" style="color: white">Create A New Game</a></button>
</div>
